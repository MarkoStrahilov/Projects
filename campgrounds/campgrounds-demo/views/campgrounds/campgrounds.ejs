<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.1/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-F3w7mX95PdgyTmZZMECAngseQB83DfGTowi0iMjiWaeVhAn4FJkqJByhZMI3AhiU" crossorigin="anonymous">
    <title>Document</title>
</head>

<body>
    <%-include('partials/nav') %>
        <% if (messages && messages.length) {%>
            <div class="alert alert-success alert-dismissible fade show" role="alert">
                <strong>Success</strong>
                <%=messages %>
                    <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
            </div>
            <% }%>
                <%for(let camp of foundCamp) {%>
                    <div class="card mb-3" style="max-width: 540px;">
                        <div class="row g-0">
                            <div class="col-md-4">
                                <%if(camp.image) { %>
                                    <img src="<%=camp.image %>" class="img-fluid rounded-start" alt="campground image">
                                    <% } %>
                            </div>
                            <div class="col-md-8">
                                <div class="card-body">
                                    <h5 class="card-title">
                                        <%=camp.title%>
                                    </h5>
                                    <p class="card-text">
                                        <%=camp.description %>
                                    </p>
                                    <p class="card-text">Campground Price:<small class="text-muted"> <%= camp.price %> $</small></p>
                                    <form action="/campgrounds/<%= camp._id%>">
                                        <button class="btn btn-primary">Details</button>
                                    </form>
                                </div>
                            </div>
                        </div>

                    </div>

                    </div>
                    <%}%>

                        <script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.9.3/dist/umd/popper.min.js" integrity="sha384-W8fXfP3gkOKtndU4JGtKDvXbO53Wy8SZCQHczT5FMiiqmQfUpWbYdTil/SxwZgAN" crossorigin="anonymous"></script>
                        <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.1/dist/js/bootstrap.min.js" integrity="sha384-skAcpIdS7UcVUC05LJ9Dxay8AXcDYfBJqt1CJ85S/CFujBsIzCIv+l9liuYLaMQ/" crossorigin="anonymous"></script>
</body>

</html>