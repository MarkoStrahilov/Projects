<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous">
    <title>Edit
        <%=foundCamp.title %>
    </title>
</head>

<body>
    <%-include('partials/nav') %>
        <section class="container edit-campground">
            <div class="container edit-campground-value">
                <h3 class="m-4 text-center">Edit
                    <%=foundCamp.title %>
                </h3>
                <form action="/campgrounds/<%=foundCamp._id %>?_method=PUT" method="POST" class="needs-validation" novalidate>
                    <div>
                        <label for="title">Campground Title</label>
                        <input class="m-3 form-control" type="text" name="title" id="title" placeholder="Title" required value="<%=foundCamp.title %>">
                    </div>
                    <div>
                        <label for="price">Campground Price</label>
                        <input class="m-3 form-control" type="text" name="price" id="price" placeholder="Price" required value="<%=foundCamp.price %>">
                    </div>
                    <div>
                        <label for="description">Campground Description</label>
                        <input class="m-3 form-control" type="text" name="description" id="description" placeholder="Description" required value="<%=foundCamp.description%>">
                    </div>
                    <div>
                        <label for="location">Campground Location</label>
                        <input class="m-3 form-control" type="text" name="location" id="location" placeholder="Location" required value="<%=foundCamp.location %>">
                    </div>
                    <div>
                        <label for="image">Campground Image</label>
                        <input class="m-3 form-control" type="text" name="image" id="image" placeholder="Location" required value="<%=foundCamp.image %>">
                    </div>
                    <button class="m-3 btn btn-success">Update</button>
                </form>
            </div>
        </section>
        <script>
            (function() {
                'use strict'
                var forms = document.querySelectorAll('.needs-validation')
                Array.prototype.slice.call(forms)
                    .forEach(function(form) {
                        form.addEventListener('submit', function(event) {
                            if (!form.checkValidity()) {
                                event.preventDefault()
                                event.stopPropagation()
                            }

                            form.classList.add('was-validated')
                        }, false)
                    })
            })()
        </script>
        <script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.9.2/dist/umd/popper.min.js" integrity="sha384-IQsoLXl5PILFhosVNubq5LC7Qb9DXgDA9i+tQ8Zj3iwWAwPtgFTxbJ8NT4GN1R8p" crossorigin="anonymous"></script>
        <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.min.js" integrity="sha384-cVKIPhGWiC2Al4u+LWgxfKTRIcfu0JTxR+EQDz/bgldoEyl4H0zUF0QKbrJ0EcQF" crossorigin="anonymous"></script>
</body>

</html>